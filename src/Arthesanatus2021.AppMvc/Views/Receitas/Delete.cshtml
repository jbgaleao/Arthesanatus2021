@model Arthesanatus2021.AppMvc.ViewModels.ReceitaViewModel

@{
    ViewBag.Title = "Excluir a Receita " + Model.Nome + "?";
}

<div class="row">
    <h2 style="font-weight:700">@ViewBag.Title </h2>
    <h4 style="font-style:italic; color:orangered;">Você tem certeza disso?</h4>
    <h4 style="font-style: italic; color: orangered; ">Esta ação será permanente!</h4>
    <hr />
</div>


<div class="row">
    <div class="col-md-4">
        <img class="imagemBorda" src="~/imagens/@Model.Foto" alt="@Model.Foto" style="width: 300px; height: 428px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Revista.Tema)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Revista.Tema)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" href="@Url.Action("Index", "Receitas")">Página Inicial</a>
            </div>
        }
    </div>

</div>