@model Arthesanatus2021.AppMvc.ViewModels.ReceitaViewModel

@{
    ViewBag.Title = "Nova Receita";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Create", "Receitas", FormMethod.Post, new { enctype = "multipart/form-data", id = "revistaForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    
        <h4>Cadastro</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RevistaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.RevistaId, new SelectList(Model.Revistas, "Id", "Tema"), string.Empty,
               new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.RevistaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImagemUpload, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">

                <div class="input-group">
                    <input type="text" name="ImagemNome" id="ImagemNome" class="form-control" />
                    <span class="input-group-btn">
                        <label class="btn btn-primary" for="ImagemUpload">
                            <input class="form-control" id="ImagemUpload" name="ImagemUpload" type="file" style="display: none"
                                   onchange="$('#ImagemNome').val(this.files[0].name); $('#ImagemUpload').blur();">
                            <span class="glyphicon glyphicon-cloud-upload"></span>
                        </label>
                    </span>
                </div>

                @Html.ValidationMessage("ImagemNome", "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-info" href="@Url.Action("Index", "Receitas")"><span class="glyphicon glyphicon-home"></span></a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("#ImagemNome").attr("data-val", "true");
        $("#ImagemNome").attr("data-val-required", "Preencha o campo Foto da Capa");
    </script>
}
